<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esprit.nolife.carsstore.activities.mes_annonces_acitivity.MesAnnoncesActivity">

    <TextView
        android:id="@+id/desole_tv_mesannonces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:maxLines="3"
        android:padding="8dp"
        android:text="Désolé"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/aucun_tv_mesannonces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desole_tv_mesannonces"
        android:layout_centerHorizontal="true"
        android:maxLines="3"
        android:padding="8dp"
        android:text="Votre liste d'annonces est vide... "
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:textStyle="normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_Myannoce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
