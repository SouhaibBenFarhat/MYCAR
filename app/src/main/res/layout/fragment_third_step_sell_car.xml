<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esprit.nolife.carsstore.activities.sell_car_activity.sell_car_fragments.ThirdStepSellCarFragment">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="COULEUR "
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_description_annonce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black_semi_transparent"
                        android:textColorHint="@color/black_semi_transparent"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <Spinner
                        android:id="@+id/sp_carburant_annonce"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:entries="@array/carburant"
                        android:spinnerMode="dialog">

                    </Spinner>

                    <Spinner
                        android:id="@+id/sp_nbPort_annonce"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:entries="@array/nbPortes"
                        android:spinnerMode="dialog">

                    </Spinner>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:background="#444" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/et_anne_annonce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Année"
                        android:inputType="number"
                        android:textColor="@color/black_semi_transparent"
                        android:textColorHint="@color/black_semi_transparent"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/et_puissance_annonce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Puissance"
                        android:inputType="number"
                        android:textColor="@color/black_semi_transparent"
                        android:textColorHint="@color/black_semi_transparent"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/et_numTel_Annonce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Numéro de telephone"
                        android:inputType="phone"
                        android:textColor="@color/black_semi_transparent"
                        android:textColorHint="@color/black_semi_transparent"
                        android:textSize="15sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:background="#444" />

                <Button
                    android:id="@+id/btn_post_add"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/my_button"
                    android:text="PUBLIER"
                    android:textColor="@color/mdtp_white" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <!--android:background="@drawable/roundbutton"-->
            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

</FrameLayout>
